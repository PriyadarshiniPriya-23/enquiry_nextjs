generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Subject {
  id       Int       @id @default(autoincrement())
  name     String
  packages Package[]
}

model Package {
  id        Int     @id @default(autoincrement())
  name      String
  code      String
  subjectId Int
  subject   Subject @relation(fields: [subjectId], references: [id])
}

enum Role {
  ADMIN
  HR
  COUNSELLOR
  ACCOUNTS
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  role     Role   @default(ADMIN)
}